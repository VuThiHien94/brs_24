<span class="title">
  <%= link_to book.title, book %>
</span>
<span class="book-info">
  <%= image_tag book.picture.url if book.picture? %>
  <%= t :author %>
  <%= book.author %>
  <%= t :publish_date %>
  <%= book.publish_date %>
  <%= t :number_pages %>
  <%= book.number_pages %>	
</span>
<span class="timestamp">
  <%= t :posted %>
  <%= book.created_at.strftime t(:timetype) %>
</span>
<% if logged_in? %>
  <div id="review_count">
    <%= book.reviews.count %>
    <%= t :reviews %>
  </div>
  <div class="review">
    <%= render "shared/review_form", book: book %>
  </div>
  <div id="reviews_<%= book.id %>">
    <%= render @reviews, book: book if book.reviews.any? %>
    <%= will_paginate @reviews %>
  </div>
<% end %>
