<% provide :title, t("allcategories") %>
<h1><%= t :allcategories %></h1>
<div class="row">
  <% @categories.each do |category| %>
    <li>
      <%= category.name %>
      <%= link_to t(:delete), [:admin, category], method: :delete, data: {confirm: t(:areyousure)} %>
      <%= link_to t(:editcategory), edit_admin_category_path(category) %>
    </li>
  <% end %>
  <%= will_paginate %>
</div>
