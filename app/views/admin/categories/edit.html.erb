<% provide :title, t(:editcategory) %>
<h1><%= t :editcategory %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @category] do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.submit t(:savechanges), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
