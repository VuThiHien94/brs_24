<% provide :title, t(:editbook) %>
<h1><%= t :editbook %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @book], html: {multipart: true} do |f| %>
      <%= render "shared/error_messages", object: @book %>

      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>

      <%= f.label :publish_date %>
      <%= f.date_field :publish_date, class: "form-control" %>

      <%= f.label :author %>
      <%= f.text_field :author, class: "form-control" %>

      <%= f.label :number_pages %>
      <%= f.number_field :number_pages, class: "form-control" %>

      <%= f.label :category %>
      <%= f.collection_select :category_id, @categories, :id, :name %>

      <%= f.file_field :picture, accept: "image/jpeg, image/gif, image/png" %>

      <%= f.submit t(:savechanges), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
