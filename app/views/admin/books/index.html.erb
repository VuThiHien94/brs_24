<% provide :title, t("allbooks") %>
<h1><%= t :allbooks %></h1>
<div class="row">
  <% @books.each do |book| %>
    <li id="book-<%= book.id %>">
      <%= book.title %>
      <%= image_tag book.picture.url if book.picture? %>
      <%= book.publish_date %>
      <%= book.rating %>
      <%= book.author %>
      <%= book.number_pages %>
      <%= book.category.name %>
      <%= link_to t(:delete), [:admin, book], method: :delete,
        data: {confirm: t(:areyousure)} %>
      <%= link_to t(:editbook), edit_admin_book_path(book) %>
    </li>
  <% end %>
  <%= will_paginate %>
</div>
