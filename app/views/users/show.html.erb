<% provide :title, @user.name %>
<h1><%= @user.name %></h1>
<% if logged_in? %>
  <%= render "follow_form" %>
<% end %>
<%= pluralize @user.reviews.count, t("review") %>
<%= pluralize @user.following.count, t("following") %>
<%= pluralize @user.followers.count, t("followers") %>

<ul class="books">
  <% if @books.any? %>
    <%= t :userfavorite, username: @user.name %>
    <% @books.each do |book| %>
      <li id="book-<%= book.id %>">
        <span class="title">
          <%= link_to book.title, book %>
        </span>
        <span class="book-info">
          <%= image_tag book.picture.url if book.picture? %>
          <%= t :author %>
          <%= book.author %>
          <%= t :publish_date %>
          <%= book.publish_date %>
          <%= t :number_pages %>
          <%= book.number_pages %>
          <%= t :category %>
          <%= book.category.name %>
        </span>
        <span class="timestamp">
          <%= t :posted %>
          <%= time_ago_in_words book.created_at %>
        </span>
      </li>
    <% end %>
  <% end %>
</ul>
