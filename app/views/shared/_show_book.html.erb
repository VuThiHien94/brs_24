<li id="book-<%= book.id %>">
  <span class="title">
    <%= link_to book.title, book %>
  </span>
  <span class="book-info">
    <%= image_tag book.picture.url if book.picture? %>
    <%= t :author %>
    <%= book.author %>
    <%= t :publish_date %>
    <%= book.publish_date %>
    <%= t :number_pages %>
    <%= book.number_pages %>
    <%= t :category %>
    <%= book.category.name %>
  </span>
  <span class="timestamp">
    <%= t :posted %>
    <%= time_ago_in_words book.created_at %>
    <%= book.created_at.strftime t :timetype %>
  </span>
  <span class="book-rating" id="book_rating">
    <% if book.rating > 0.0 %>
      <%= t :rating %>
      <%= book.rating %>
    <% end %>
  </span>
</li>
